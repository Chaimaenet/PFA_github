pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials-id')
    }

    stages {
        stage('Login to DockerHub') {
            steps {
                script {
                    // Connexion à DockerHub
                    sh echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u chaima59 --password-stdin

                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Construire les services définis dans docker-compose.yml
                    sh 'docker-compose build'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Déployer les services définis dans docker-compose.yml
                    sh 'docker-compose up -d'
                }
            }
        }
        stages {
        stage('Check Docker Version') {
            steps {
                sh 'docker --version'
            }
        }
    }

    post {
        always {
            script {
                // Se déconnecter de DockerHub après le pipeline
                sh 'docker logout'
            }
        }
    }
}
